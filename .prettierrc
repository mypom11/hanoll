{
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "es5",
  "semi": true,
  "useTabs": false,
  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "jsxBracketSameLine": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^styles/(.*)$",
    "^assets/(.*)$",
    "^api/(.*)$",
    "^queries/(.*)$",
    "^components/(.*)$",
    "^customize/(.*)$",
    "^pages/(.*)$",
    "^store/(.*)$",
    "^hooks/(.*)$",
    "^utils/(.*)$",
    "^constants/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
